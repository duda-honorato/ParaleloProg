"""
Calculadora Simples
Um programa b√°sico para opera√ß√µes matem√°ticas fundamentais
"""

def calculadora():
    print("=" * 40)
    print("        CALCULADORA SIMPLES")
    print("=" * 40)
    print("Opera√ß√µes dispon√≠veis:")
    print("1 - Adi√ß√£o (+)")
    print("2 - Subtra√ß√£o (-)")
    print("3 - Multiplica√ß√£o (*)")
    print("4 - Divis√£o (/)")
    print("5 - Sair")
    print("=" * 40)
    
    while True:
        try:
            opcao = input("\nDigite o n√∫mero da opera√ß√£o (1-5): ")
            
            if opcao == '5':
                print("\nObrigado por usar a calculadora! At√© mais! üëã")
                break
            
            if opcao not in ['1', '2', '3', '4']:
                print("‚ùå Op√ß√£o inv√°lida! Tente novamente.")
                continue
            
            num1 = float(input("Digite o primeiro n√∫mero: "))
            num2 = float(input("Digite o segundo n√∫mero: "))
            
            if opcao == '1':
                resultado = num1 + num2
                operacao = "+"
            elif opcao == '2':
                resultado = num1 - num2
                operacao = "-"
            elif opcao == '3':
                resultado = num1 * num2
                operacao = "*"
            elif opcao == '4':
                if num2 == 0:
                    print("‚ùå Erro: Divis√£o por zero n√£o √© permitida!")
                    continue
                resultado = num1 / num2
                operacao = "/"
            
            print(f"\n‚úÖ Resultado: {num1} {operacao} {num2} = {resultado}")
            
        except ValueError:
            print("‚ùå Erro: Digite apenas n√∫meros v√°lidos!")
        except KeyboardInterrupt:
            print("\n\nPrograma interrompido pelo usu√°rio.")
            break

if __name__ == "__main__":
    calculadora()
